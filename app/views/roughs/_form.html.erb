<%= form_with(model: rough) do |form| %>
  <% if rough.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(rough.errors.count, "error") %> prohibited this rough from being saved:</h2>

      <ul>
        <% rough.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "container">
    <div>
      <%= form.label :house_id, "Address", style: "display: block" %>
      <%= collection_select( :rough, :house_id, House.all, :id, :address, include_blank: 'None') %>
    </div>
    <br>
    <div class = "row">
      <div class = "col">
        <div>
          <%= form.label :picture,"Upload Photo", style: "display: block" %>
          <%= form.file_field :picture %>
        </div>
        <br>
        <div>
          <%= form.label :Content, style: "display: block" %>
          <%= form.text_field :content %>
        </div>
        <br><br>
      </div>
      <div class = "col">
        <div>
          <%= form.label :completed, "Who Completed This", style: "display: block" %>
          <%= collection_select( :rough, :completed, Person.all, :id, :full_name, include_blank: 'None') %>
        </div>
        <br>
        <div>
          <%= form.label :Notes, style: "display: block" %>
          <%= form.text_field :notes %>
        </div>
      </div>
    </div>
    <div>
      <br>
      <%= form.submit :"Save", class:"btn btn-outline-dark btn-lg"%>
    </div>
  </div>
<% end %>
