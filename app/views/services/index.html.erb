<h1>Services</h1>

<div id="services">
  <% @services.each do |service| %>
    <%= render service %>
    <p>
      <%= link_to "Show this service", service, class:"btn btn-outline-dark btn-sm" %>
    </p>
  <% end %>
</div>

<%= link_to "New service", new_service_path, class:"btn btn-outline-dark btn-sm" %>

